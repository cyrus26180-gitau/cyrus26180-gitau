#include <stdio.h>

int main() {
    FILE *file;
    float amount, total = 0;

    file = fopen("sales.txt", "r"); // open for reading
    if (file == NULL) {
        printf("Error: sales.txt not found!\n");
        return 1;
    }

    while (fscanf(file, "%f", &amount) == 1) {
        total += amount;
    }

    fclose(file);

    printf("Total Sales for the Day: %.2f\n", total);

    return 0;
}