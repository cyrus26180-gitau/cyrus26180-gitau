#include <stdio.h>
  float converttocelcius(float F) {
  	return (F - 32)* 5.0/9.0;
  }
  int main () {
  	float F;
  	printf("Enter temperature in fahrenheit :");
  	scanf("%f",&F);
  	printf("temperature in celsius=%.2fÂ°c\n",converttocelcius(F));
  	return 0;
  }
  	
  	